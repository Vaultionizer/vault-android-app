{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://vaultionizer.com",
  "title": "Vaultionizer Reference file",
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "minimum": 0
    },
    "files": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/element"
      }
    }
  },
  "required": [ "version" ],
  "definitions": {
    "element": {
      "oneOf": [
        {
          "$ref": "#/definitions/file"
        },
        {
          "$ref": "#/definitions/folder"
        }
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "file"
        },
        "crc": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "id": {
          "type": "number"
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      },
      "required": [ "type", "crc", "name", "id" ],
      "additionalProperties": false
    },
    "folder": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "directory"
        },
        "name": {
          "type": "string"
        },
        "createdAt": {
          "type": "string"
        },
        "content": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/element"
          }
        }
      },
      "required": [ "type", "name" ],
      "additionalProperties": false
    }
  }
}